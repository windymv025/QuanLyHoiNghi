<Window x:Class="QuanLyHoiNghi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyHoiNghi"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="700" Width="1024">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		<DockPanel>
			<!--Nut tab-->
			<Grid DockPanel.Dock="Top" Height="40">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Button x:Name="trangChuBtn" Content="Trang Chủ" FontSize="14" FontWeight="Bold" Background="Blue" Foreground="White" ></Button>
				<Button Grid.Column="1" x:Name="hoiNghiDangKyBtn" Content="Hội nghị đã đăng ký" FontSize="14" FontWeight="Bold"></Button>
				<Button Grid.Column="2" x:Name="quanLyHoiNghiBtn" Content="Quản lý hội nghị" FontSize="14" FontWeight="Bold"></Button>
				<Button Grid.Column="3" Name="taiKhoanBtn" Content="Tài khoản" FontSize="14" FontWeight="Bold"></Button>
			</Grid>

			<StackPanel>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="100"></RowDefinition>
						<RowDefinition Height="15"/>
						<RowDefinition Height="100"/>
						<RowDefinition Height="*"></RowDefinition>
						<RowDefinition Height="50"/>
					</Grid.RowDefinitions>

					<!--Tên phần mềm-->
					<StackPanel HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="150,0" Visibility="Visible" >
						<TextBlock Text="Phần mềm Quản lý Hội nghị" FontSize="36" FontWeight="Bold" FontFamily="Segoe UI Black" Margin="0,20,0,10"></TextBlock>
						<TextBlock Text="Phần mềm hỗ trợ quản lý hội nghị hiệu quả" FontWeight="Bold" HorizontalAlignment="Center" FontStyle="Italic" FontSize="14"></TextBlock>
					</StackPanel>
					<Border  Grid.Row="1" Height="1" Background="Black" BorderBrush="Black" OpacityMask="Black" VerticalAlignment="Bottom" Grid.ColumnSpan="2" ></Border>

					<Grid Grid.Row="2" Grid.ColumnSpan="2" >
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="50"/>
						</Grid.ColumnDefinitions>
						<!--Tìm kiếm-->

						<Grid  Name="timKiem_grid" Visibility="Collapsed" Margin="20,20,20,20">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="1.5*"/>
								<ColumnDefinition Width="2*"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="2*"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="2*"/>
							</Grid.ColumnDefinitions>


							<Label Content="Tên hội nghị: " FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
							<TextBox x:Name="tenHoiNghiTextBox" TextChanged="tenHoiNghiTextBox_TextChanged" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Width="auto" Height="40" Margin="10,0,0,0" Padding="5" FontWeight="Bold" FontSize="14"></TextBox>

							<Label Grid.Column="2" Content="Địa điểm:" FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
							<TextBox Grid.Column="3" x:Name="điaiemTextBox" VerticalContentAlignment="Center" Width="auto" Height="40" VerticalAlignment="Center" Margin="10,0,0,0" Padding="5" FontWeight="Bold" FontSize="14"></TextBox>

							<Label Grid.Column="4" Content="Thời gian:" FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />

							<DatePicker Grid.Column="5" VerticalAlignment="Center" VerticalContentAlignment="Center"  Margin="10,0,0,0" Height="40" FontWeight="Bold" FontStyle="Italic" FontSize="14" ></DatePicker>

						</Grid>

						<!--Ẩn tim kiem-->
						<Grid x:Name="sapXep_grid">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100"/>
								<ColumnDefinition Width="4*"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="1" Text="Danh sách Hội nghị" FontWeight="Bold" VerticalAlignment="Center"  FontSize="22" />
							<ComboBox Grid.Column="2" Margin="10" VerticalAlignment="Center" BorderBrush="White" Background="White">
								<ComboBoxItem IsSelected="True">
									<TextBlock Text="Tăng dần" TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
								</ComboBoxItem>
								<ComboBoxItem>
									<TextBlock Text="Giảm dần" TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
								</ComboBoxItem>
							</ComboBox>
							<ComboBox Grid.Column="3" Margin="10" VerticalAlignment="Center" BorderBrush="White" Background="White" Text="Sắp xếp">
								<ComboBoxItem >
									<TextBlock Text="Theo tên" TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
								</ComboBoxItem>
								<ComboBoxItem>
									<TextBlock Text="Theo ngày tổ chức" TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
								</ComboBoxItem>
							</ComboBox>
						</Grid>

						<Image Grid.Column="1" x:Name="timKiemBtn" MouseDown="timKiemBtn_MouseDown"
							   Source="Assets/search.png" Margin="5,0,5,0"></Image>
					</Grid>

					<!--Hội nghị-->
					<StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="30,10,30,10">
						<ListView x:Name="lvDanhSachHoiNghi">
							<ListView.ItemTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal">
										<Border  Width="100" Height="100" BorderBrush="Blue" CornerRadius="0" BorderThickness="2">
											<TextBlock Text="{Binding ThoiGianBatDau}" FontWeight="Bold" Foreground="Blue" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
										</Border>
										<Grid  Margin="30,0,0,0">
											<Grid.RowDefinitions>
												<RowDefinition Height="*"/>
												<RowDefinition Height="*"/>
												<RowDefinition Height="30"/>
											</Grid.RowDefinitions>
											<TextBlock Grid.Row="0" Text="{Binding TENHN}" FontSize="18" FontWeight="Bold" TextTrimming="WordEllipsis"/>
											<TextBlock Grid.Row="1" Text="{Binding MOTANGANHN}" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" FontSize="15" TextTrimming ="WordEllipsis"></TextBlock>

											<Button Grid.Row="2" x:Name="xemThemBtn" Content="Xem thêm" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="#FF0076FF" Width="100" Foreground="White" Height="30" />
										</Grid>
									</StackPanel>
								</DataTemplate>
							</ListView.ItemTemplate>
						</ListView>
					</StackPanel>

				</Grid>

			</StackPanel>

		</DockPanel>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Image x:Name="prevBtn" Source="Assets/search.png" Width="40"/>
			<TextBlock Text="2/10" x:Name="trangHienTaiTxt" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"  Margin="40,0,40,0"/>
			<Image x:Name="nextBtn" Source="Assets/search.png" Width="40"/>
		</StackPanel>
	</Grid>
</Window>
